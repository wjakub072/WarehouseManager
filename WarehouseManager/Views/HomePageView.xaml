<UserControl x:Class="WarehouseManager.Views.HomePageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:WarehouseManager.Views"
             mc:Ignorable="d" 
             d:Height="600"
             d:Width="1000">
    <Grid>
        <TabControl TabStripPlacement="Left"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
            <TabItem>
                <TabItem.Header>
                    <Image VerticalAlignment="Center" 
                           HorizontalAlignment="Center" 
                           Source="Icons/product.ico" 
                           Width="42" 
                           Height="42"
                           Margin="5"/>
                </TabItem.Header>
                <views:ProductsTabView DataContext="{Binding TabElements[0]}" />
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <Image VerticalAlignment="Center" 
                           HorizontalAlignment="Center" 
                           Source="Icons/availability.ico" 
                           Width="42" 
                           Height="42"
                           Margin="5"/>
                </TabItem.Header>
                <views:AvailabilityTabView DataContext="{Binding TabElements[1]}" />
            </TabItem>
            <TabItem >
                <TabItem.Header>
                    <Image VerticalAlignment="Center" 
                           HorizontalAlignment="Center" 
                           Source="Icons/delivery.ico" 
                           Width="42" 
                           Height="42"
                           Margin="5"/>
                </TabItem.Header>
                <views:DeliveryTabView DataContext="{Binding TabElements[2]}" />
            </TabItem>
            
        </TabControl>

    </Grid>
</UserControl>
